<% content_for(:title, "Mario's | Reviews") %>

<div class="about">
  <h1>Author: <%= @review.author %></h1>
  <h1>Review: <%= @review.content_body %></h1>
  <h1>Rating: <%= @review.rating %></h1>
  </div>

  <% if current_user && current_user.admin %>
    <button class="btn btn-success"><%= link_to "Edit Review", edit_product_review_path(@product, @review) %></button>
    <button class="btn btn-success"><%= link_to "Delete Review", product_review_path(@review),
                      :data => {:confirm => "Are you sure?",
                      :method => "delete"} %></button>
  <% end %>